{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
          "@/*": ["src/*"]
        },
      "noEmit": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
   
    "include": [
        "src/**/*",
        "declaration.d.ts"  
      ],
    "exclude": ["node_modules"]
  }